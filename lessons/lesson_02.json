{
    "lesson_number": 2,
    "lesson_title": "Essential Particles",
    "grammar_rules": [
        {
            "rule_id": "subject_particles",
            "title": "Subject particles 이/가",
            "explanation": "이/가 marks the subject of a sentence. Use 이 after consonants and 가 after vowels. This is different from the topic particle 은/는.",
            "pattern": "[Subject]이/가 [Verb/Adjective]",
            "formality_note": "Subject particles are used in all formality levels"
        },
        {
            "rule_id": "object_particles", 
            "title": "Object particles 을/를",
            "explanation": "을/를 marks the direct object of a sentence. Use 을 after consonants and 를 after vowels.",
            "pattern": "[Subject]이/가 [Object]을/를 [Verb]",
            "formality_note": "Object particles can sometimes be omitted in casual speech"
        },
        {
            "rule_id": "location_particle",
            "title": "Location particle 에",
            "explanation": "에 indicates location (at/in) or time (at/on). It's attached to nouns to show where or when something happens.",
            "pattern": "[Place/Time]에 [Action]",
            "formality_note": "에 is used consistently across all speech levels"
        }
    ],
